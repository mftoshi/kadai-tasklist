<% if logged_in? %>
<h1>タスク一覧</h1>
<p>ログイン完了ユーザ名: <%= current_user.name %></p>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
  <% end %>
</ul>
<%= link_to 'タスクの投稿', new_task_path %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Log in</h1>
      <%= link_to 'Log in', signup_path %>
    </div>
  </div>
<% end %>
<%= link_to 'Logout', logout_path, method: :delete %>
